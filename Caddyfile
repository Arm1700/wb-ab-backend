84.247.184.155:80 {
    # Отключаем TLS полностью, только HTTP
    # tls internal можно убрать для HTTP
    # Обработка API
    handle_path /api/* {
        reverse_proxy localhost:3001
    }

    # Статика Next.js
    handle_path /_next/static/* {
        header Cache-Control "no-cache, must-revalidate"
        reverse_proxy localhost:3000
    }

    # Фронтенд
    handle {
        reverse_proxy localhost:3000
    }
}
